<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doc_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/myoffice_account_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/modify_nickname_tv"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="昵称"
            android:textColor="@color/text_tab"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/modify_nickname_et"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_hint_lly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="85dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/user_hint_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nick_hint"
            android:textColor="@color/text_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/pwd_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dip"
        android:text="@string/pwd_two_error"
        android:textColor="@color/text_red_bg"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/confirm_modify_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_et_height"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="35dip"
        android:background="@drawable/modify_pwd_btn_bg"
        android:text="@string/confirm_modify"
        android:textColor="@color/btn_focus"
        android:textSize="16sp" />

</LinearLayout>
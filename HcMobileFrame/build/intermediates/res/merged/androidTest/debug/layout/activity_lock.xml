<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:axd="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_framework_bg" >
    <com.android.hcframe.TopBarView 
        android:id="@+id/lock_top_bar"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/top_bar_height"
	    axd:topbar_title="@string/lock_title"
	    android:background="@color/topbar_bg" />
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/account_icon"
	    android:scaleType="center"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="20dip" />
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/lock_pw"
	    android:id="@+id/lock_draw_pw"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center"
	    android:layout_marginTop="10dip"
	    android:layout_marginBottom="10dip" />
	<com.android.hcframe.lock.LockPatternViewEx 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/lock_pattern"
	    android:padding="30dip" />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="20dip"
	    android:paddingRight="20dip" >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/lock_reset_pw"
		    android:id="@+id/lock_reset_pw"
		    android:gravity="center"
		    android:layout_alignParentLeft="true" />
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/lock_manager_account"
		    android:id="@+id/lock_manager_account"
		    android:gravity="center"
		    android:layout_alignParentRight="true" />
	</RelativeLayout>
	
</LinearLayout>

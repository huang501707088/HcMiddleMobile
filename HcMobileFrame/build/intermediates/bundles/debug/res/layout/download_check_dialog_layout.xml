<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/corner_download_dialog_bg" >
    <TextView 
        android:id="@+id/download_title"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:paddingLeft="36dip"
        android:paddingRight="36dip"
        android:textSize="14sp"
        android:textColor="#333333"
        android:singleLine="true" />
    <!-- android:layout_marginLeft="36dip"
         android:layout_marginRight="36dip" -->
    <TextView 
        android:id="@+id/download_content"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:maxLines="5"
        android:paddingLeft="36dip"
        android:paddingRight="36dip"
        android:layout_marginBottom="20dip"
        android:textSize="14sp"
        android:textColor="#333333"
        android:focusable="true"
        android:clickable="true"
        android:longClickable="true" />
    <View android:layout_width="280dip"
        android:layout_height="1dip"
        android:background="@color/divider_bg" />
    <LinearLayout 
         android:layout_width="280dip"
         android:layout_height="50dip">
         <TextView 
             android:layout_width="0dip"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:id="@+id/download_canel_btn"
             android:textColor="#51afe6"
             android:textSize="18sp"
             android:gravity="center"
             android:text="@string/update_download_dialog_cancel" />
         <TextView 
             android:layout_width="0dip"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:id="@+id/download_ok_btn"
             android:textColor="#51afe6"
             android:textSize="18sp"
             android:gravity="center"
             android:text="@string/update_download_dialog_ok" />
     </LinearLayout>
    
    

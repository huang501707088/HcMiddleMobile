<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/doc_bg" >
    <TextView 
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/myoffice_item_margin_left"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="#ff333333"
        android:singleLine="true"
        android:layout_marginRight="5dip"
        android:id="@+id/details_doc_file_name" />
	<TextView 
        android:layout_width="40dip"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/myoffice_item_margin_right"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="#ff999999"
        android:id="@+id/details_doc_file_size" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doc_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/myoffice_account_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mobile_bind_two_tv"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="@string/mobile_num"
            android:textColor="@color/text_tab"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/mobile_bind_two_et"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/bind_new_phone"
            android:textColor="@color/text_tab"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_bind_hint_lly"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="85dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/modify_bind_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_hint"
            android:textColor="@color/sign_month_color"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/myoffice_account_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/modify_bind_icode_tv"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="@string/icode"
                android:textColor="@color/text_tab"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/modify_bind_icode_et"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="110dip"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/text_tab"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/modify_bind_icode_btn"
            android:layout_width="90dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/modify_code_bg_select"
            android:text="@string/get_icode"
            android:textColor="@color/btn_focus"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pwd_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dip"
        android:text="@string/pwd_two_error"
        android:textColor="@color/text_red_bg"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/bind_confirm_submit_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_et_height"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="64dip"
        android:background="@drawable/bind_submit_bg_select"
        android:text="@string/confirm_submit"
        android:textColor="@color/btn_focus"
        android:textSize="16sp" />

</LinearLayout>
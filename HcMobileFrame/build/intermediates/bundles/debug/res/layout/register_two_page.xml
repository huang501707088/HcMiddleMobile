<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doc_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/myoffice_account_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_register_two_tv"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="@string/hint_user"
            android:textColor="@color/text_tab"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/user_register_two_et"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_hint_lly"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="85dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/user_hint_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_hint"
            android:textColor="@color/text_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/myoffice_account_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nickname_register_two_tv"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="@string/nickname"
            android:textColor="@color/text_tab"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/nickname_register_two_et"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/text_tab"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/myoffice_account_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/newpwd_register_two_tv"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="@string/newpwd"
            android:textColor="@color/text_tab"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/newpwd_register_two_et"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/text_tab"
            android:textSize="12sp"
            android:singleLine="true"
            android:digits="._0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwd_hint_lly"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:visibility="gone"
        android:paddingLeft="85dip"
        android:paddingTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pwd_hint_one"
            android:textColor="@color/text_999999"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pwd_hint_two"
            android:textColor="@color/text_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/myoffice_account_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/confirmpwd_register_two_tv"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="@string/confirmpwd"
            android:textColor="@color/text_tab"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/confirmpwd_register_two_et"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/text_tab"
            android:textSize="12sp"
            android:singleLine="true"
            android:digits="._0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ" /> 
    </LinearLayout>

    <TextView
        android:id="@+id/pwd_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dip"
        android:text="@string/pwd_two_error"
        android:textColor="@color/text_red_bg"
        android:visibility="gone"
        android:textSize="12sp" />

    <Button
        android:id="@+id/confirm_submit_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_et_height"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="64dip"
        android:background="@drawable/modify_pwd_btn_bg"
        android:text="@string/confirm_submit"
        android:textColor="@color/btn_focus"
        android:textSize="16sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/msg_receiver_settings_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myoffice_item_height"
        android:background="@drawable/myoffice_account_bg" >

        <TextView
            android:id="@+id/msg_receiver_settings_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/news_info_paddingTop"
            android:text="@string/msg_rec_settings" />

        <TextView
            android:id="@+id/msg_receiver_settings_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/news_info_paddingTop" />
        <ImageView
            android:id="@+id/center_scanlogin_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:scaleType="fitCenter"
            android:src="@drawable/right_jian" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_cache_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myoffice_item_height"
        android:background="@drawable/myoffice_account_bg" >

        <TextView
            android:id="@+id/clear_cache_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/news_info_paddingTop"
            android:text="@string/clear_cache" />

        <TextView
            android:id="@+id/clear_cache_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/news_info_paddingTop"
            android:text="@string/clear_cach_data"
            android:textColor="@color/text_hint" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gesture_pwd_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myoffice_item_height"
        android:background="@drawable/myoffice_account_bg"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/gesture_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/news_info_paddingTop"
            android:text="@string/gesture_pwd" />

        <TextView
            android:id="@+id/gesture_pwd_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/news_info_paddingTop"
            android:text="@string/gesture_close"
            android:textColor="@color/text_hint" />
    </RelativeLayout>



</LinearLayout>
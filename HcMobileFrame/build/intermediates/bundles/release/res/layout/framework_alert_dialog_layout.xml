<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dip"
    android:layout_height="wrap_content"
    android:paddingTop="22dip"
    android:id="@+id/framework_alert_dialog_parent"
    android:background="@drawable/corner_download_dialog_bg">
    <!-- 对话框的标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/framework_alert_dialog_title"
        android:layout_marginBottom="22dip"
        android:textColor="#999999"
        android:textSize="14sp"
        android:maxLines="1"
        android:paddingLeft="25dip"
        android:paddingRight="25dip"/>
    <!-- 编辑对话框的内容 -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framework_alert_dialog__edit_content"
        android:layout_marginBottom="22dip"
        android:maxLines="4"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="16sp"
        android:background="@drawable/framework_dialog_edit_bg"
        android:textColorHint="#b3b3b3"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"/>
    <!-- 不可编辑对话框的内容 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dip"
        android:textColor="#333333"
        android:textSize="16sp"
        android:id="@+id/framework_alert_dialog_text_content"
        android:visibility="gone"
        android:paddingLeft="25dip"
        android:paddingRight="25dip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/divider_bg"/>
    <!-- 底部双按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:id="@+id/framework_alert_dialog_btn_parent" >
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/framework_alert_dialog_canel"
            android:textColor="#51afe6"
            android:textSize="18sp"
            android:text="取消"/>
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/divider_bg"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/framework_alert_dialog_ok"
            android:textColor="#51afe6"
            android:textSize="18sp"
            android:text="确认"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:id="@+id/framework_alert_dialog_single_btn"
        android:textColor="#51afe6"
        android:textSize="18sp"
        android:text="确认"
        android:gravity="center"
        android:visibility="gone"/>
</LinearLayout>
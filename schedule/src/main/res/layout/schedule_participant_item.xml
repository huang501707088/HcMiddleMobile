<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="22dip"
    android:paddingLeft="10dip"
    android:paddingRight="2dip"
    android:background="@drawable/schedule_participants_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dip"
        android:textSize="14sp"
        android:textColor="@color/edittext_bg"
        android:gravity="center"
        android:id="@+id/participant_item_name"/>
    <ImageView
        android:layout_width="22dip"
        android:layout_height="22dip"
        android:src="@drawable/schedule_delete_btn"
        android:scaleType="centerInside"
        android:id="@+id/participant_item_delete_btn"/>
</LinearLayout>
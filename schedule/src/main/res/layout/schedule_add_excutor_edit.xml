<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/schedule_add_excutor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="执行人   "
        android:textColor="@color/schedule_add_title_text"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/schedule_add_excutor_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/schedule_add_excutor_text"
        android:background="#ffffff"
        android:text="请输入执行人"
        android:paddingLeft="15dp"
        android:textColor="@color/schedule_add_content_text"
        android:textSize="14sp" />
</RelativeLayout>
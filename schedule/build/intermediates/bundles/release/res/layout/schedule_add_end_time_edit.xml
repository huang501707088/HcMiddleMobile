<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/schedule_add_end_time_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="结束时间"
        android:textColor="@color/schedule_add_title_text"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/schedule_add_end_time_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/schedule_add_time"
        />

    <TextView
        android:id="@+id/schedule_add_end_time_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/schedule_add_end_time_img"
        android:layout_toRightOf="@id/schedule_add_end_time_text"
        android:background="#ffffff"
        android:text="请选择结束时间"
        android:paddingLeft="15dp"
        android:textColor="@color/schedule_add_text"
        android:textSize="14sp"
        android:gravity="center_vertical"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zjhc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dip" >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <com.android.hcframe.container.ContainerRoundedImageView
            android:layout_width="@dimen/container_image_width_40"
            android:layout_height="@dimen/container_image_width_40"
            android:scaleType="center"
            zjhc:element_id="img01"
            android:id="@+id/container_item_grid05_img01"
            android:padding="5dip"
            zjhc:siBorderColor="@color/edittext_bg"
            zjhc:siBorderAlpha="1.0" />
        <com.android.hcframe.container.ContainerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            zjhc:element_id="text01"
            android:textSize="@dimen/container_text_size_12"
            android:textColor="@color/container_text_title"
            android:singleLine="true"
            android:id="@+id/container_item_grid05_text01"
            android:paddingTop="3dip" />
        <com.android.hcframe.container.ContainerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            zjhc:element_id="text02"
            android:textSize="@dimen/container_text_size_10"
            android:textColor="@color/container_text_subtitle"
            android:singleLine="true"
            android:id="@+id/container_item_grid05_text02"
            android:layout_marginTop="3dip" />
    </LinearLayout>

</RelativeLayout>
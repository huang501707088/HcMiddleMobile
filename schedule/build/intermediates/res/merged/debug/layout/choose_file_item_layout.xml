<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:paddingLeft="14dip"
    android:gravity="center_vertical"
    android:background="#ffffff">
    <ImageView
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:scaleType="center"
        android:id="@+id/choose_file_item_icon"/>
    <TextView
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="60dip"
        android:id="@+id/choose_file_item_name"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:layout_marginLeft="14dip"/>
    <CheckBox
        android:id="@+id/choose_file_item_checkbox"
        android:button="@drawable/checkbox_button_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />
    <ImageView
        android:id="@+id/choose_file_item_go_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dip"
        android:scaleType="fitCenter"
        android:src="@drawable/right_jian" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_add_parent"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginTop="10dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/schedule_add_images_parent"
        android:layout_width="match_parent"
        android:layout_height="95dip"
        android:background="#ffffff">
        <!-- 图片1 -->
        <FrameLayout
            android:id="@+id/schedule_add_image_parent1"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/schedule_add_image1"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/schedule_add_delete_image1"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="top|right"
                android:scaleType="center"
                android:src="@drawable/delete_btn"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 图片2 -->
        <FrameLayout
            android:id="@+id/schedule_add_image_parent2"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/schedule_add_image2"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/schedule_add_delete_image2"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="top|right"
                android:scaleType="center"
                android:src="@drawable/delete_btn"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 图片3 -->
        <FrameLayout
            android:id="@+id/schedule_add_image_parent3"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/schedule_add_image3"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/schedule_add_delete_image3"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="top|right"
                android:scaleType="center"
                android:src="@drawable/delete_btn"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 图片4 -->
        <FrameLayout
            android:id="@+id/schedule_add_image_parent4"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/schedule_add_image4"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/schedule_add_delete_image4"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="top|right"
                android:scaleType="center"
                android:src="@drawable/delete_btn"
                android:visibility="gone" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape"
            android:gravity="center">

            <ImageView
                android:id="@+id/add_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/schedule_add_camerabutton" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
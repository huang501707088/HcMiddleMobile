<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_framework_bg"
    xmlns:zjhc="http://schemas.android.com/apk/res-auto" >
    <com.android.hcframe.TopBarView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:id="@+id/annual_program_top_bar"
        zjhc:topbar_return_visiable = "true"
        zjhc:topbar_right_image_visiable = "false"
        android:background="@color/annual_topbar_bg"
        zjhc:topbar_title="@string/annual_program_title" />
	<ListView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/item_default_bottom_bg"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:smoothScrollbar="true"
        android:divider="@color/divider_bg"
        android:dividerHeight="1dip"
        android:id="@+id/annual_program_listview"
        android:paddingBottom="1dip" />
	<!-- ListView上边和下边有黑色的阴影 
	     android:fadingEdge="none" -->
</LinearLayout>

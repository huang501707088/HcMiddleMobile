<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/netdisc_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/netdisc_list_linear_header"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/netdisc_search_list_img_header"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:src="@drawable/netdisc_search_list_img_header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/netdisc_search_list_text_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="我共享的空间"
                android:textColor="@color/netdisc_text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/netdisc_search_list_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="3个"
        android:textColor="@color/netdisc_text_gray_color"
        android:layout_marginRight="30dp" />
</LinearLayout>

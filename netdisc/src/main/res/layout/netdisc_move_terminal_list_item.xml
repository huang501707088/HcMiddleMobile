<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/netdisc_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/netdisc_move_list_img"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:scaleType="center"
        android:src="@drawable/netdisc_impl_list_img" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/netdisc_move_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="新建文件夹(1)"
            android:textColor="@color/netdisc_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/netdisc_move_list_one_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-2-15 18:30"
            android:textColor="@color/netdisc_text_gray_color"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>

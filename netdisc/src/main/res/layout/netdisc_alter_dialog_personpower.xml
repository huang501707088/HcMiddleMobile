<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/line_gray_cancel"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/netdisc_id_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="张"
                android:textColor="@color/netdisc_33_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/netdisc_id_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/netdisc_icon_close" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/netdisc_id_pub_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/netdisc_id_tv_zhuli"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_circle_red_44"
                    android:gravity="center"
                    android:text="助理"
                    android:textColor="@color/netdisc_write"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/netdisc_id_tv_zuyuan"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_circle_red_44"
                    android:gravity="center"
                    android:text="组员"
                    android:textColor="@color/netdisc_write"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/netdisc_id_tv_fangke"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_circle_red_44"
                    android:gravity="center"
                    android:text="访客"
                    android:textColor="@color/netdisc_write"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:text="助理客进行成员管理和文件的管理/组员可进行上传和下载操作/访客只可进行下载操作"
            android:textColor="@color/netdisc_99_gray"
            android:textSize="10sp" />

        <View
            style="@style/LineHorizontal.Gray_d8"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="19dp" />

        <LinearLayout
            android:id="@+id/netdisc_id_ll_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="移除该组员"
                android:textColor="@color/netdisc_51_blue"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
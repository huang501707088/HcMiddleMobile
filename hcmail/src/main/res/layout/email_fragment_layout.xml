<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zjhc="http://schemas.android.com/apk/res-auto">
    <com.android.hcframe.TopBarView
        android:id="@+id/email_fragment_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/topbar_bg"
        zjhc:topbar_right_image_src="@drawable/email_topbar_right_src"
        zjhc:topbar_right_image_visiable="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_bar_height"
        android:id="@+id/email_fragment_compose_mail"
        android:textColor="@color/topbar_bg"
        android:textSize="@dimen/top_bar_title"
        android:text="写邮件"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawablePadding="8dip"
        android:drawableLeft="@drawable/hcmail_home_send_icon"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:id="@+id/email_fragment_divider"
        android:layout_above="@id/email_fragment_compose_mail"
        android:background="@color/divider_bg"/>

    <com.android.hcframe.pull.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/email_fragment_listview"
        android:cacheColorHint="#00000000"
        android:divider="@color/divider_bg"
        android:dividerHeight="0dip"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:smoothScrollbar="true"
        android:layout_below="@id/email_fragment_top_bar"
        android:layout_above="@id/email_fragment_divider"/>
    <com.android.hcframe.view.toast.NoDataView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/email_fragment_no_data"
        android:gravity="center"
        android:orientation="vertical"/>
    <!-- edit top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="#343b40"
        android:id="@+id/email_fragment_edit_top_parent"
        android:visibility="gone"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/top_bar_left"
            android:textColor="@color/edittext_bg"
            android:gravity="center_vertical"
            android:text="取消"
            android:id="@+id/email_fragment_edit_top_left"
            android:padding="10dip"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/top_bar_title"
            android:textColor="@color/edittext_bg"
            android:gravity="center"
            android:id="@+id/email_fragment_edit_top_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/top_bar_left"
            android:textColor="@color/edittext_bg"
            android:gravity="center_vertical"
            android:text="全选"
            android:id="@+id/email_fragment_edit_top_right"
            android:padding="10dip"/>
    </LinearLayout>
    <!-- edit bottom -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentBottom="true"
        android:background="#343b40"
        android:id="@+id/email_fragment_edit_bottom_parent"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/top_bar_title"
            android:textColor="@color/edittext_bg"
            android:gravity="center"
            android:id="@+id/email_fragment_edit_bottom_delete"
            android:text="删除所选"
            android:drawablePadding="8dip"
            android:drawableLeft="@drawable/email_message_edit_delete_src"
            android:layout_centerHorizontal="true"/>
        <!-- 已删件箱 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/email_fragment_edit_bottom">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/top_bar_title"
                    android:textColor="@color/edittext_bg"
                    android:gravity="center"
                    android:id="@+id/email_fragment_edit_bottom_clear"
                    android:text="彻底删除"
                    android:drawablePadding="8dip"
                    android:drawableLeft="@drawable/email_message_edit_delete_src"/>
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/divider_bg"
                android:layout_marginTop="12dip"
                android:layout_marginBottom="12dip"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/top_bar_title"
                    android:textColor="@color/edittext_bg"
                    android:gravity="center"
                    android:id="@+id/email_fragment_edit_bottom_move"
                    android:text="移动到"
                    android:drawablePadding="8dip"
                    android:drawableLeft="@drawable/email_message_edit_move_src"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
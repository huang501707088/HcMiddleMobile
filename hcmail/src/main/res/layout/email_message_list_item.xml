<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dip"
    android:background="@drawable/item_default_bottom_bg"
    android:gravity="center_vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_message_item_src"
        android:scaleType="center"
        android:src="@drawable/hcmail_inbox_opened"/>
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="38dip"
        android:layout_weight="1"
        android:layout_marginLeft="12dip">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:textColor="#333333"
            android:textSize="16sp"
            android:id="@+id/email_message_item_title"
            android:ellipsize="end" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/email_message_item_title"
            android:lines="1"
            android:textColor="#999999"
            android:textSize="12sp"
            android:id="@+id/email_message_item_date" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/email_message_item_title"
            android:lines="1"
            android:textColor="#999999"
            android:textSize="12sp"
            android:id="@+id/email_message_item_send"
            android:paddingRight="12dip"
            android:layout_toLeftOf="@id/email_message_item_date"
            android:ellipsize="end" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/email_message_item_checkbox"
        style="@style/HcmailCustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="14dip"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</LinearLayout>

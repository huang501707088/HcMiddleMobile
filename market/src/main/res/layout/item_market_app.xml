	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/market_update_btn_text"
	    android:text="@string/market_update_app"
	    android:background="#ff2fbbf2"
	    android:textSize="@dimen/market_app_name"
	    android:id="@+id/market_update_app_btn"
	    android:layout_alignParentBottom="true"
	    android:gravity="center"
	    android:textColor="#ffffffff" />
	<ImageView 
	    android:layout_width="@dimen/market_app_new_width"
	    android:layout_height="@dimen/market_app_new_width"
	    android:background="@drawable/market_new_app"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:id="@+id/market_new_app" />
	<ProgressBar 
	    android:layout_width="@dimen/market_progress_width"
	    android:layout_height="@dimen/market_progress_height"
	    android:id="@+id/market_download_progress"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="@dimen/market_progress_margin_bottom"
	    style="?android:attr/progressBarStyleHorizontal"
	    android:progressDrawable="@drawable/seekbar_style"/>

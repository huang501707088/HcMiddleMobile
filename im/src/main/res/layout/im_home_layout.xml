<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:gravity="center_vertical"
        android:background="@color/edittext_bg"
        android:visibility="gone">
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#333333"
            android:drawablePadding="5dip"
            android:text="组织结构"
            android:drawableTop="@drawable/im_organization_icon"
            android:id="@+id/im_home_organization"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1dip"
            android:layout_height="50dip"
            android:background="@color/divider_bg"
            />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#333333"
            android:drawablePadding="5dip"
            android:text="联系人"
            android:drawableTop="@drawable/im_contacts_icon"
            android:id="@+id/im_home_contacts"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1dip"
            android:layout_height="50dip"
            android:background="@color/divider_bg"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#333333"
            android:drawablePadding="5dip"
            android:text="讨论组"
            android:drawableTop="@drawable/im_group_icon"
            android:id="@+id/im_home_group"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1dip"
            android:layout_height="50dip"
            android:background="@color/divider_bg"/>


        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#333333"
            android:drawablePadding="5dip"
            android:text="广播"
            android:drawableTop="@drawable/im_broadcast_icon"
            android:id="@+id/im_home_broadcast"
            android:gravity="center_horizontal"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/divider_bg"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.android.hcframe.pull.PullToRefreshListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/im_home_listview"
            android:background="@color/main_framework_bg"
            android:cacheColorHint="#00000000"
            android:divider="@color/divider_bg"
            android:dividerHeight="1dip"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:smoothScrollbar="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/im_home_pop_view"
            android:visibility="gone">
            <com.android.hcframe.internalservice.contacts.TriangleView
                android:layout_width="7dip"
                android:layout_height="4dip"
                android:id="@+id/im_home_pop_top"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dip"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/im_home_pop_top"
                android:background="#b3000000"
                android:layout_marginRight="5dip"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:text="发起私聊"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:id="@+id/im_home_contacts_btn"
                    android:drawableLeft="@drawable/im_home_contacts_icon"
                    android:drawablePadding="8dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="10dip"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#ffffff"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="10dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:text="发起群聊"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:id="@+id/im_home_group_btn"
                    android:drawableLeft="@drawable/im_home_chat_icon"
                    android:drawablePadding="8dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="10dip"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <com.android.hcframe.view.toast.NoDataView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/im_home_no_data"
        android:gravity="center"
        android:orientation="vertical"/>
</LinearLayout>
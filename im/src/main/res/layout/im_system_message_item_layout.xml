<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zjhc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edittext_bg">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:paddingLeft="14dip"
        android:paddingRight="14dip"
        android:gravity="center_vertical">
        <com.android.hcframe.container.ContainerRoundedImageView
            android:layout_width="42dip"
            android:layout_height="42dip"
            android:scaleType="center"
            android:id="@+id/im_system_message_item_icon"
            zjhc:siBorderColor="@color/edittext_bg"
            zjhc:siBorderAlpha="1.0"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:id="@+id/im_system_message_item_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#cccccc"
                    android:id="@+id/im_system_message_item_date"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:id="@+id/im_system_message_item_content"/>
                <com.android.hcframe.view.PointTextView
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:id="@+id/im_system_message_item_badge"
                    android:background="@drawable/im_chatting_badge_bg"
                    android:visibility="gone"
                    zjhc:flag="1"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
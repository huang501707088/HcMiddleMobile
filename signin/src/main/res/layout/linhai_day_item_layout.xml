<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="@color/main_framework_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:paddingLeft="@dimen/btn_padding_left"
        android:paddingRight="@dimen/btn_padding_right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linhai_day_item_name"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:id="@+id/linhai_day_item_status"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:layout_toRightOf="@id/linhai_day_item_name"
            android:gravity="center"
            android:layout_marginLeft="10dip"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_jian"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:id="@+id/linhai_day_item_go"
            android:padding="10dip"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/divider_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dip"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>
        <!-- 上午签到 37dip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/btn_padding_left"
            android:paddingRight="@dimen/btn_padding_right"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="上午签到"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:id="@+id/linhai_day_item_am_time"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:id="@+id/linhai_day_item_am_address"
                android:layout_marginLeft="10dip"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/linhai_day_item_icon"
                android:id="@+id/linhai_day_item_am_image"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>
        <!-- 下午签到 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/btn_padding_left"
            android:paddingRight="@dimen/btn_padding_right"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="下午签到"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:id="@+id/linhai_day_item_pm_time"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:id="@+id/linhai_day_item_pm_address"
                android:layout_marginLeft="10dip"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/linhai_day_item_icon"
                android:id="@+id/linhai_day_item_pm_image"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>